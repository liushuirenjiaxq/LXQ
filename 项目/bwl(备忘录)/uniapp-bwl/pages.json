{
	"easycom": {
		"autoscan": true,
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "待办"
			}
		},
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "笔记"
			}
		},
		{
			"path": "pages/user/user",
			"style": {
				"navigationBarTitleText": "用户"
			}
		},
		{
			"path": "pages/active/add",
			"style": {
				"navigationBarTitleText": "新增"
			}
		},
		{
			"path": "pages/active/add_db",
			"style": {
				"navigationBarTitleText": "新增"
			}
		},
		{
			"path": "pages/active/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/active/register",
			"style": {
				"navigationBarTitleText": "注册"
			}
		}
	],
	"globalStyle": {
		"titleNView" : false,
		"bounce" : "none",
		"scrollIndicator" : "none",
		"navigationStyle": "custom"
	},
	"uniIdRouter": {},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#3cc51f",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"iconfontSrc": "static/fonts/iconfont.ttf",// 引入字体图标库
		"list": [{
			"pagePath": "pages/index/index",
			"text": "待办",
			"iconfont": { 
				"text": "\ue602", // &#xe602; 这是图标原始的编码
				"selectedText": "\ue602", //&#xe602;
				"fontSize": "20px",  // 图标大小
				"color": "#7A7E83", // 未选中时，图标的颜色
				"selectedColor": "#3cc51f" // 选中时，图标的颜色
			}
		}, {
			"pagePath": "pages/home/home",
			"text": "笔记",
			"iconfont": {
				"text": "\ue651",//&#xe651;
				"selectedText": "\ue651",
				"fontSize": "20px",
				"color": "#7A7E83",
				"selectedColor": "#3cc51f"
			}
		}, {
			"pagePath": "pages/user/user",
			"text": "个人中心",
			"iconfont": {
				"text": "\ue7ae",
				"selectedText": "\ue7ae",
				"fontSize": "20px",
